<%- include("./includes/head.ejs") %>
<body>
    <div class="container">
        <div class="profile-header">
            <div class="profile-info">
                <h1><%= data.name %></h1>
                <div class="stats">
                    <div class="stat">
                        <span class="stat-number"><%= data.posts.length %></span>
                        <span class="stat-label">Posts</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number"><%= data.followers %></span>
                        <span class="stat-label">Followers</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number"><%= data.following %></span>
                        <span class="stat-label">Following</span>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="posts-title">Posts</h2>
        <div class="posts-grid">
            <% data.posts.forEach((post) => { %>
                <div class="post">
                    <img src="<%= post.image %>" alt="Post" class="post-image">
                    <div class="post-stats">
                        <div class="post-stat">
                            <span class="post-stat-number"><%= post.likes %></span>
                            <span class="post-stat-label">Likes</span>
                        </div>
                        <div class="post-stat">
                            <span class="post-stat-number"><%= post.comments %></span>
                            <span class="post-stat-label">Comments</span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>